<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="64dp"
            android:layout_margin="5dp"
            android:src="@drawable/application_icon" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Настройки"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:linksClickable="true"
                android:singleLine="true"
                android:text="Оценить приложение"
                android:textColor="#ff3e57e8" />
        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/add_delete_recipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:textSize="14sp"
        android:text="Разрешить добавление/удаление рецептов (beta)" />

    <Button
        android:id="@+id/upload_textures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Загрузить иконки в базу"
        android:background="@drawable/big_button"
        android:visibility="gone"/>

    <Button
        android:id="@+id/create_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить категорию"
        android:background="@drawable/big_button"
        android:visibility="gone" />

    <Button
        android:id="@+id/create_mod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить мод"
        android:background="@drawable/big_button"
        android:visibility="gone" />

    <Button
        android:id="@+id/create_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить предмет"
        android:background="@drawable/big_button"
        android:visibility="gone" />

    <Button
        android:id="@+id/import_database"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Импорт базы (существующая удалится)"
        android:background="@drawable/big_button" />

    <Button
        android:id="@+id/export_database"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Экспорт базы"
        android:background="@drawable/big_button" />
</LinearLayout>