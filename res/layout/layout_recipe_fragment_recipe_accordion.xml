<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/recipe_craft_delete_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:background="@drawable/delete"
            android:gravity="right"
            android:text=""
            android:textSize="15sp"
            android:typeface="monospace"
            android:visibility="visible" />

        <Button
            android:id="@+id/recipe_craft_recipe_button"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:layout_toLeftOf="@id/recipe_craft_delete_button"
            android:drawableRight="@drawable/corner_down"
            android:gravity="left"
            android:text="Рецепт №1"
            android:textSize="15sp"
            android:typeface="monospace"
            android:background="@drawable/big_button"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/recipe_craft_recipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/crafting_table"
            android:gravity="center"
            android:stretchColumns="true">

            <TableRow android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/p_1_x_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="3sp"/>

                <ImageView
                    android:id="@+id/p_1_x_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="3sp"
                    android:layout_margin="2dp"/>

                <ImageView
                    android:id="@+id/p_1_x_3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="3sp"/>
            </TableRow>

            <TableRow android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_height="310dp">

                <ImageView
                    android:id="@+id/p_2_x_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="3sp"/>

                <ImageView
                    android:id="@+id/p_2_x_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="3sp"/>

                <ImageView
                    android:id="@+id/p_2_x_3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="3sp" />
            </TableRow>

            <TableRow android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/p_3_x_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="3sp"/>

                <ImageView
                    android:id="@+id/p_3_x_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="3sp" />

                <ImageView
                    android:id="@+id/p_3_x_3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="3sp"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>