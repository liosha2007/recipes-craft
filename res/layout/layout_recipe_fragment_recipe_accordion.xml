<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_marginBottom="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff9c64b7">

        <ImageButton
            android:id="@+id/recipe_craft_delete_button"
            android:src="@drawable/delete"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:typeface="monospace"
            android:background="@android:color/transparent"
            android:visibility="visible"/>

        <Button
            android:id="@+id/recipe_craft_recipe_button"
            style="@style/RecipesCraftTheme.Button"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/recipe_craft_delete_button"
            android:gravity="start"
            android:text="Рецепт №1"
            android:textSize="15sp"
            android:typeface="monospace" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/recipe_craft_recipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:stretchColumns="true">

            <TableRow
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/p_1_x_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="3sp"
                    style="@style/RecipesCraftTheme.RecipePoint"/>

                <ImageView
                    android:id="@+id/p_1_x_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="3sp"
                    style="@style/RecipesCraftTheme.RecipePoint"/>

                <ImageView
                    android:id="@+id/p_1_x_3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="3sp"
                    style="@style/RecipesCraftTheme.RecipePoint"/>
            </TableRow>

            <TableRow
                android:layout_height="310dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/p_2_x_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="3sp"
                    style="@style/RecipesCraftTheme.RecipePoint"/>

                <ImageView
                    android:id="@+id/p_2_x_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="3sp"
                    style="@style/RecipesCraftTheme.RecipePoint"/>

                <ImageView
                    android:id="@+id/p_2_x_3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="3sp"
                    style="@style/RecipesCraftTheme.RecipePoint"/>
            </TableRow>

            <TableRow
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/p_3_x_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="3sp"
                    style="@style/RecipesCraftTheme.RecipePoint"/>

                <ImageView
                    android:id="@+id/p_3_x_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="3sp"
                    style="@style/RecipesCraftTheme.RecipePoint"/>

                <ImageView
                    android:id="@+id/p_3_x_3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="3sp"
                    style="@style/RecipesCraftTheme.RecipePoint"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>