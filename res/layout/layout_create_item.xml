<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:text="Добавление предмета"
                android:textSize="20sp"
                android:layout_margin="10dp"/>

            <ImageButton
                android:id="@+id/create_item_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/no_icon"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Иконка"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Название предмета"
                android:layout_margin="3dp"/>

            <EditText
                android:id="@+id/create_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_big"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Описание предмета"
                android:layout_margin="3dp"/>

            <EditText
                android:id="@+id/create_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_big"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Заметка о предмете"
                android:layout_margin="3dp"/>

            <EditText
                android:id="@+id/create_item_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_big"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Предмет относится к моду"
                android:layout_margin="3dp"/>

            <Spinner
                android:id="@+id/create_item_mod"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Предмет относится к категории"
                android:layout_margin="3dp"/>

            <Spinner
                android:id="@+id/create_item_category"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="10dp" />

            <Button
                android:id="@+id/create_item_create"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/big_button"
                android:text="Добавить предмет" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>